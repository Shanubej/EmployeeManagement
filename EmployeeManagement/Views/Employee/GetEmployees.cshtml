@model List<EmployeeModel>
@{
    Layout = "/Views/_employee.cshtml";
}

<div class="text-center" style="border-bottom:1px solid darkgray">
    <div style="display:flex;justify-content:space-between">
        <h5 style="margin:0 1rem">Employee List</h5>
        <div style="text-align:right;margin-right:1%">
            <input id="inputSearch" placeholder="search" style="border-radius:5px;border:1px solid grey;" />
        </div>
    </div>
    <div style="overflow-x:scroll;overflow-y:scroll;" class="mt-3">
        <table style="width:1200px;height:400px;" class="table table-bordered">
            <thead style="background-color:gainsboro">
                <tr>
                    <td>Id</td>
                    <td>Empoyee Name</td>
                    <td>DOJ</td>
                    <td>Designation</td>
                    <td>Email</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.DOJ</td>
                        <td>@item.Designation</td>
                        <td>@item.Email</td>
                        <td>
                            <a href="@Url.Action("Index", "Employee", new { id = item.Id })" class="btn btn-primary">Edit</a>
                            <form action="@Url.Action("DeleteEmployee", "Employee", new { id = item.Id })" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

